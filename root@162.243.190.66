version: "3.9"

services:
  app:
    build: .
    container_name: NAPDB
    volumes:
      - ./:/app
    ports:
      - "80:3000"
    depends_on:
      - mongodb
    environment:
      - MONGODB_URI=mongodb://mongodb:27017/NAPDB
  mongodb:
    image: mongo:latest
    container_name: mongodb
    environment:
      MONGO_INITDB_DATABASE: NAPDB
    volumes:
      - mongodb:/data/db
    ports:
      - "27017:27017"

volumes:
  mongodb:
